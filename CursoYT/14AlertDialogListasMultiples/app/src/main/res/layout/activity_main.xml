        android:layout_height="wrap_content"
        android:text="Mes: ">
    </TextView>

    <Button
        android:id="@+id/btnHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione hora">
    </Button>

    <TextView
        android:id="@+id/tvHora"
        android:layout_width="wrap_content"
